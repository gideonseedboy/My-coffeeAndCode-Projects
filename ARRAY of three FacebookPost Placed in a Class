
// Creat an ARRAY of three FacebookPost they should all have the same class.

class FacebookPost{
    constructor(creatorsName, postTiltle, postDate, photoURL, postId, postTextBody){
        this.creatorsName = creatorsName;
        this.postTiltle = postTiltle;
        this.postDate = postDate;
        this.photoURL = photoURL;
        this.postId = postId;
        this.postTextBody = postTextBody;  
    }
   

     postPreview(){
            console.log(`Hello Checkout ${this.creatorsName}` + "'s new facebook post tittled: " + `${this.postTiltle}`);
        }

        
}



